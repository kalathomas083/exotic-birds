{{!-- hero section start --}}
<section class="hero is-primary products-header is-medium">
	<div class="hero-body is-bold">
		<div class="container">
			<h1 class="title">
				Products
			</h1>
			<h2 class="subtitle">
				We have a wide-variety of products to help you care for your new feathery family member
			</h2>
		</div>
	</div>
</section> {{!-- hero section end --}}

{{!-- cages section start --}}
<section class="section" id="cages">
	<div class="hero is-primary products-header">
		<div class="hero-body is-bold">
			<div class="container">
				<h1 class="title">
					Cages
				</h1>
				<h2 class="subtitle">
					Find a comfortable resting place for your bird to go every night.
				</h2>
			</div>
		</div>
	</div>
	<div class="content">
	</div>

	{{!-- cages main content --}}
	<div class="container">
		<table class="table is-fullwidth is-striped is-narrow">
			<thead>
				<th>Cage Size</th>
				<th>Good for</th>
			</thead>
			<tbody>
				{{#each products.products.cages}}
				<tr>
					<td>{{size}}</td>
					<td>{{good-for}}</td>
				</tr>
				{{/each}}
			</tbody>
		</table>
	</div>

</section>
{{!-- cages section end --}}

{{!-- stands section start --}}
<section class="section" id="stands">
	<div class="hero is-primary products-header">
		<div class="hero-body is-bold">
			<div class="container">
				<h1 class="title">
					Stands
				</h1>
				<h2 class="subtitle">Find a nice perch for your bird to hang out with you outside his cage.</h2>
			</div>
		</div>
	</div>

	<div class="container notification">
		<div class="">
			<div class='carousel carousel-animated carousel-animate-fade'>
				<div class='carousel-container'>
					{{#each products.products.stands}}
					<div class='carousel-item has-background is-active'>
						<img class="is-background" src="{{photo-src}}" alt="" width="640" height="310" />
						<div class="title">{{title}}</div>
					</div>
					{{/each}}
				</div>
				<div class="carousel-navigation">
					<div class="carousel-nav-left">
						<i class="fa fa-chevron-left" aria-hidden="true"></i>
					</div>
					<div class="carousel-nav-right">
						<i class="fa fa-chevron-right" aria-hidden="true"></i>
					</div>
				</div>
			</div>

		</div>
	</div>
</section>
{{!-- stands section end --}}

